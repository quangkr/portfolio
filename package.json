{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Simple online portfolio. The website uses VuePress static site generator and the vue.js framework, developed by Evan You.",
  "main": "index.js",
  "author": "QuangKR <dangminhquang.r@gmail.com>",
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quangkr/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/quangkr/portfolio/issues"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^6.0.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.23.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.9",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.1",
    "vuepress": "^2.0.0-beta.6",
    "vuepress-vite": "^2.0.0-beta.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "vue/no-deprecated-slot-attribute": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix"
    ],
    "*.{md,json,yml,css,scss}": "prettier --write"
  }
}
